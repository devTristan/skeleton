{
  "name": "yourpackage",
  "version": "0.0.0",
  "description": "yourpackage",
  "main": "dist/index.js",
  "author": "Tristan Davies <npm@tristan.io>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean; babel --source-maps --optional runtime --stage 1 -d dist src",
    "watch": "npm run clean; babel --source-maps --optional runtime --stage 1 -d dist -w src",
    "prepublish": "npm run test; npm run lint",
    "lint": "standard src/**/*.js",
    "test": "node dist/test/*.js"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-eslint": "^7.1.1",
    "babel-runtime": "^6.23.0",
    "blue-tape": "^1.0.0",
    "fs-promise": "^2.0.0",
    "git-validate": "^2.0.3",
    "glob-promise": "^3.1.0",
    "standard": "^9.0.1",
    "tape": "^4.2.0"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "pre-commit": [
    "test",
    "lint"
  ]
}
